<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff515556"
    android:padding="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|end"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Accuracy: "


            android:textColor="#ffdedee4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/accuracy"

            android:textColor="#ffdedee4"
            android:paddingEnd="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

    <com.androidplot.xy.XYPlot
        android:id="@+id/strengthHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"

        title="history"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Scale"
            android:id="@+id/textView12"
            android:textColor="#ffdedee4" />

        <SeekBar
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/strengthSensitivity"

            android:max="10"
            android:progress="1" />

    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#ff6d7172">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:padding="10dp"

        android:baselineAligned="false"
        android:gravity="center_vertical|center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Deflection"
                android:id="@+id/textView6"


                android:layout_column="0"
                android:layout_row="0"
                android:textColor="#ffdedee4"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textIsSelectable="false" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Highest Value"
                    android:id="@+id/highestValueText"

                    android:layout_column="1"
                    android:layout_row="0"
                    android:textColor="#ffdedee4"
                    android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00.00"
                    android:id="@+id/alertText"

                    android:layout_column="0"

                    android:textColor="#fff6f7eb"
                android:layout_gravity="center_horizontal"
                android:maxLength="5" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00.00"
                    android:id="@+id/highestVal"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textColor="#ffcf1300"
                    android:textStyle="bold"
                    android:background="#ff818a8d"
                    android:padding="2dp"
                    android:gravity="center_horizontal"


                android:maxLength="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Magnetic Strength"


                    android:layout_column="0"
                    android:layout_row="2"
                    android:textColor="#ffdedee4"
                    android:gravity="center_horizontal"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Base"
                    android:id="@+id/textView5"

                    android:layout_column="1"
                    android:layout_row="2"
                    android:textColor="#ffdedee4"
                    android:gravity="center_horizontal"
                    />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00.00"
                    android:id="@+id/strengthText"

                    android:layout_column="0"
                    android:layout_row="3"
                    android:textColor="#ff0dc402"
                    android:gravity="center_horizontal"
                android:maxLength="5" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20.00"
                    android:id="@+id/geomagneticText"

                    android:layout_column="1"
                    android:layout_row="3"
                    android:textColor="#fff6f7eb"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                android:maxLength="5" />
        </TableRow>
    </TableLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_gravity="center"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        card_view:cardCornerRadius="4dp"
        
        card_view:contentPaddingBottom="10dp"
        card_view:contentPaddingTop="10dp"
        card_view:contentPaddingLeft="20dp"
        card_view:contentPaddingRight="20dp"
        card_view:cardBackgroundColor="#ff6d7172"
        >
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"



        android:baselineAligned="false"
        android:gravity="center_vertical|center_horizontal">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Base calibration: "
                android:id="@+id/textView8"

                android:textColor="#ffdedee4" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Current as default"
                android:id="@+id/textView9"


                android:textColor="#ffdedee4"
                android:gravity="center_horizontal"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Manual"
                android:id="@+id/textView11"

                android:textColor="#ffdedee4"
                android:layout_gravity="center" />


          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Geomagnetic Field\n(Requires location)"
                android:id="@+id/textView10"

                android:textColor="#ffdedee4"
                android:gravity="center_horizontal"

                android:visibility="gone" />-->
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"
                android:id="@+id/setDefaultButton"

                android:layout_gravity="center_horizontal"
                 />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/editGeomagnetic"

                android:enabled="true"
                android:hint="00.00"
                android:gravity="center_horizontal"

                android:singleLine="true"

                android:inputType="number|numberSigned|numberDecimal"
                android:background="#ffecefef"
                android:padding="5dp"
                android:layout_gravity="center"
                android:maxLength="5" />
          <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set"
                android:id="@+id/setManualButton"

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:visibility="gone" />

            <!--    <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Get"
                  android:id="@+id/magneticFieldButton"

                  style="?android:attr/buttonStyleSmall"
                  android:visibility="gone" />-->
</TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>
